---
import moment from "moment";

const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{frontmatter.title}</title>
  </head>
  <body>
    <div class="mx-auto max-w-2xl py-5 lg:py-10">
      <div class="space-y-8">
        <div>
          <h1 class="font-bold text-2xl lg:text-3xl">{frontmatter.title}</h1>
          <p class="font-semibold text-xs lg:text-sm text-gray-400">
            {moment(frontmatter.pubDate).format("MMMM Do, YYYY")}
          </p>
        </div>

        <slot />
      </div>
    </div>
  </body>
</html>
