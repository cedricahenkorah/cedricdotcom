---
import moment from "moment";
import Navbar from "../components/Navbar.astro";
const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{frontmatter.title}</title>
  </head>
  <body class="dark:bg-black dark:text-white text-black bg-white">
    <main class="py-5">
      <Navbar />
      <div class="space-y-8 mt-3 lg:mt-6">
        <div>
          <h1 class="font-bold text-2xl lg:text-3xl">{frontmatter.title}</h1>
          <p class="font-semibold text-xs lg:text-sm text-gray-400">
            {moment(frontmatter.pubDate).format("MMMM Do, YYYY")}
          </p>
        </div>

        <slot />
      </div>
    </main>
  </body>
</html>

<style>
  main {
    margin: auto;
    /* padding: 1rem; */
    width: 800px;
    max-width: calc(100% - 2rem);
    line-height: 1.6;
  }
</style>
