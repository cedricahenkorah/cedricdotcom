---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import moment from "moment";
import { getCollection } from "astro:content";
const posts = await getCollection("posts");
---

<Layout title="Writings">
  <Navbar />
  <main class="max-w-2xl mx-auto px-6">
    <section class="mb-16">
      <h1 class="text-3xl font-bold mb-8 text-gray-900 dark:text-gray-100">
        Writings
      </h1>
      <div class="space-y-6">
        {
          posts
            .slice()
            .sort(
              (a: any, b: any) =>
                new Date(b.data.pubDate).getTime() -
                new Date(a.data.pubDate).getTime()
            )
            .map((post: any) => (
              <article class="group">
                <a href={`/posts/${post.slug}`} class="block">
                  <time class="text-sm text-gray-500 dark:text-gray-400 mb-2 block">
                    {moment(post.data.pubDate).format("MMMM Do, YYYY")}
                  </time>
                  <h3 class="text-base font-semibold text-gray-900 dark:text-gray-100 group-hover:text-gray-600 dark:group-hover:text-gray-400 transition-colors">
                    {post.data.title}
                  </h3>
                </a>
              </article>
            ))
        }
      </div>
    </section>
  </main>
</Layout>

