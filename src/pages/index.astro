---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import moment from "moment";
import { getCollection } from "astro:content";
import { projects } from "../constants/index";
const posts = await getCollection("posts");
---

<Layout title="cedric ahenkorah">
  <Navbar />

  <main class="max-w-2xl mx-auto px-6">
    <!-- Hero Section -->
    <section class="mb-5">
      <h1 class="text-4xl font-bold mb-4 text-gray-900 dark:text-gray-100">
        Cedric Ahenkorah
      </h1>
      <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
        building software systems for the future
      </p>
    </section>

    <!-- Social Links -->
    <section class="mb-16">
      <div class="flex items-center gap-6 text-sm">
        <span class="text-gray-500 dark:text-gray-400">Find me on:</span>
        <div class="flex gap-4">
          <a
            href="https://github.com/cedricahenkorah"
            class="text-gray-900 dark:text-gray-100 hover:text-gray-600 dark:hover:text-gray-400 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
          >
            GitHub
          </a>
          <a
            href="https://twitter.com/cedricahenkora"
            class="text-gray-900 dark:text-gray-100 hover:text-gray-600 dark:hover:text-gray-400 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
          >
            Twitter
          </a>
          <a
            href="https://www.linkedin.com/in/cedric-ahenkorah-593116189/"
            class="text-gray-900 dark:text-gray-100 hover:text-gray-600 dark:hover:text-gray-400 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
          >
            LinkedIn
          </a>
          <a
            href="https://dev.to/cedricahenkorah"
            class="text-gray-900 dark:text-gray-100 hover:text-gray-600 dark:hover:text-gray-400 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
          >
            Blog
          </a>
          <a
            href="https://docs.google.com/document/d/16sO2OGTOtqvGN31PrdH4MBD91i4cZCQ7wuAypdrbG7Q/edit?usp=sharing"
            class="text-gray-900 dark:text-gray-100 hover:text-gray-600 dark:hover:text-gray-400 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
          >
            Resume
          </a>
        </div>
      </div>
    </section>

    <!-- Writings Section -->
    <section class="mb-16">
      <h2 class="text-xl font-bold mb-4 text-gray-900 dark:text-gray-100">
        Writing
      </h2>
      <div class="space-y-6">
        {
          posts
            .slice()
            .sort(
              (a: any, b: any) =>
                new Date(b.data.pubDate).getTime() -
                new Date(a.data.pubDate).getTime()
            )
            .map((post: any) => (
              <article class="group">
                <a href={`/posts/${post.slug}`} class="block">
                  <time class="text-sm text-gray-500 dark:text-gray-400 mb-2 block">
                    {moment(post.data.pubDate).format("MMMM Do, YYYY")}
                  </time>
                  <h3 class="text-base font-semibold text-gray-900 dark:text-gray-100 group-hover:text-gray-600 dark:group-hover:text-gray-400 transition-colors">
                    {post.data.title}
                  </h3>
                </a>
              </article>
            ))
        }
      </div>
    </section>

    <!-- Projects Section -->
    <section class="mb-16">
      <h2 class="text-xl font-bold mb-4 text-gray-900 dark:text-gray-100">
        Projects
      </h2>
      <div class="space-y-6">
        {
          projects.map((project) => (
            <article class="group">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
                <div class="flex-1">
                  <a
                    href={project.url || project.github}
                    class="block"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <h3 class="text-base font-semibold text-gray-900 dark:text-gray-100 group-hover:text-gray-600 dark:group-hover:text-gray-400 transition-colors">
                      {project.title}
                    </h3>
                  </a>
                  <p class="text-gray-600 dark:text-gray-400 mt-1 text-sm leading-relaxed">
                    {project.description}
                  </p>
                </div>
                <div class="flex gap-3 text-sm">
                  {project.url && (
                    <a
                      href={project.url}
                      class="text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      Demo →
                    </a>
                  )}
                  <a
                    href={project.github}
                    class="text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    GitHub →
                  </a>
                </div>
              </div>
            </article>
          ))
        }
      </div>
    </section>
  </main>
</Layout>
